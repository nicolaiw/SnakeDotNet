<Window x:Class="SnakeDotNet.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeDotNet"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        Height="120" Width="460" WindowStyle="None" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="Transparent">
        <Button x:Name="BtnExit" Content="Exit" Margin="7,7,7,0" VerticalAlignment="Top" Height="49" FontSize="30" />
        <Button x:Name="BtnResume" Content="Resume" Margin="7,64,7,0" VerticalAlignment="Top" Height="49" FontSize="30"/>
    </Grid>
</Window>
